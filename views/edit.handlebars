<!-- ./views/edit.handlebars -->

<div class="container py-5">

  <div class="row">
    <div class="col-12 col-lg-10 col-xl-8 mx-auto">
      <div class="card">
        <div class="card-body">
          <h5 class="card-title text-center">請修改你的支出 </h5>
          <hr>
          <form action="/records/{{{record.id}}}/edit" method="POST">

            <div class="form-group form-row">
              <label for="name" class="col-md-2 col-form-label">
                名稱
              </label>
              <div class="col-md-10">
                <input type="text" name="name" class="form-control" id="name" placeholder="" value="{{{record.name}}}"
                  required>
              </div>
            </div>

            <div class="form-group form-row">
              <label for="date" class="col-md-2 col-form-label">
                日期
              </label>
              <div class="col-md-10">
                <input type="date" name="date" class="form-control" id="date" placeholder="" value="{{{record.date}}}"
                  required>
              </div>
            </div>

            <div class="form-group form-row">
              <label for="merchant" class="col-md-2 col-form-label">
                商家
              </label>
              <div class="col-md-10">
                <input type="text" name="merchant" class="form-control" id="merchant" placeholder=""
                  value="{{{record.merchant}}}">
              </div>
            </div>

            <div class="form-group form-row">
              <label for="category" class="col-md-2 col-form-label">
                類別
              </label>
              <div class="col-md-10">
                <select name="category" class="form-control" id="category" required>
                  <option {{#if categoryFor.Home}} selected {{/if}}>家居物業</option>
                  <option {{#if categoryFor.Traffic}} selected {{/if}}>交通出行</option>
                  <option {{#if categoryFor.Fun}} selected {{/if}}>休閒娛樂</option>
                  <option {{#if categoryFor.Food}} selected {{/if}}>餐飲食品</option>
                  <option {{#if categoryFor.Other}} selected {{/if}}>其他</option>
                </select>
              </div>
            </div>

            <div class="form-group form-row">
              <label for="amount" class="col-md-2 col-form-label">
                金額
              </label>
              <div class="col-md-10">
                <input type="number" name="amount" class="form-control" id="amount" placeholder="" min="0"
                  value="{{{record.amount}}}" required>
              </div>
            </div>

            <div class="text-center">
              <button class="btn btn-primary" type="submit">送出</button>
            </div>

          </form>
        </div>

      </div>
    </div>
  </div>
</div>